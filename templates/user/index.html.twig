{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>{{'user.user'|trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>{{'user.role'|trans}}</th>
                <th>{{'user.password'|trans}}</th>
                <th>{{'user.actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('app_user_delete', {'id': user.id}) }}" class= "btn btn-danger">{{'user.supprimer'|trans}}</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class= "btn btn-success">{{'user.edit'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}"> {{'user.new'|trans}}</a>
{% endblock %}
