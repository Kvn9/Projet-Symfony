{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}
{% block stylesheets %}
    <style>
    .detail button{
        border-radius: 5px;
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
        padding: 15px 30px;
        color: #FFF;
        text-align: justify;
        font-family: Inter;
        font-size: 20px;
        font-weight: 700;
        border: none;
        outline: none;
    }
    .detail button.buy {
        background: #59ABD9;
    }
    .detail button.remove {
        background: #D95959;
    }
    .detail button.update {
        background: #EE742F;
    }
    .detail .card {
        border-radius: 5px;
        background: #F9F9F9;
        padding: 10px;
    }

    .detail img {
        margin-right: 50px;
        border-radius: 10px;
        width: 35%;
    }

    a {
        text-decoration: none;
    }

    </style>
{% endblock %}

{% block body %}
    <div class="d-flex detail h-100 mt-5">
        <img src="{{ asset('upload/' ~ product.picture) }}" >
        <div class="w-100 h-100 d-flex flex-column justify-content-between">
            <div class="card">
                <h1>{{ product.name }}</h1>
                <h3>{{ product.prize }} €/formation</h3>
                <div>
                    <label for="selectOption">Quantité</label>
                    <select id="selectOption" name="selectOption">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>
                </div>
                <p>{{ product.description }}</p>
            </div>
            <div class="w-100">
                <a><button class="w-100 d-flex justify-content-between align-items-center buy mt-3">Ajouter au panier <i class='bx bx-cart'></i></button></a>
                <a href="{{ path('app_product_edit', {'id': product.id}) }}"><button class="w-100 d-flex justify-content-center update mt-3">Modifier le produit</button></a>
                <a href="{{ path('app_product_delete', {'id': product.id}) }}"><button class="w-100 d-flex justify-content-center remove mt-3">Supprimer le produit</button></a>
            </div>
        </div>
    </div>


    {#

    <table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>Prize</th>
            <td>{{ product.prize }}</td>
        </tr>
        <tr>
            <th>Stock</th>
            <td>{{ product.stock }}</td>
        </tr>
        <tr>
            <th>Picture</th>
            <td>{{ product.picture }}</td>
        </tr>
    </tbody>
</table>
    #}




{% endblock %}
