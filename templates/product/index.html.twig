{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Liste des formations</h1>

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_product_new') }}">Add new product</a>
        {% endif %}
    </div>

    <div class="products d-flex ">
        {% for product in products %}
            <div class="card" style="width: 18rem; margin-right: 30px">
                {% if product.picture is not null %}
                    <img src="{{ asset('upload/' ~ product.picture) }}" alt="img-card" >
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">{{ product.name }}</h5>
                    <p class="card-text">{{ product.prize}} â‚¬</p>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary w-100">En savoir plus</a>
                </div>
            </div>
        {% else %}
            <p>Aucune formations en ligne</p>
        {% endfor %}
    </div>


{% endblock %}
