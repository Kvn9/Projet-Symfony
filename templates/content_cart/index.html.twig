{% extends 'base.html.twig' %}

{% block title %}ContentCart index{% endblock %}

{% block body %}
    <h1>ContentCart index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for content_cart in content_carts %}
            <tr>
                <td>{{ content_cart.id }}</td>
                <td>{{ content_cart.quantity }}</td>
                <td>{{ content_cart.createdAt ? content_cart.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_content_cart_show', {'id': content_cart.id}) }}">show</a>
                    <a href="{{ path('app_content_cart_edit', {'id': content_cart.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_content_cart_new') }}">Create new</a>
{% endblock %}
